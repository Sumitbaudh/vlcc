<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id = "@+id/hairintro"
        android:text = "Hair"
        android:textAllCaps="true"
        android:textStyle="italic"
        android:typeface="serif"
        android:textAlignment="center"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="@drawable/hair_framesi_banner"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/diploma"
        android:text = "Diploma in Hair Technology"
        android:layout_below="@+id/hairintro"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#000"
        android:typeface="serif"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/diplomacourse"
        android:text = "Course Content : "
        android:layout_below="@+id/diploma"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#000"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_centerHorizontal="false"
        android:textSize="18dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/diplomacontent"
        android:text="Hair Trichology,Shampooing and Conditioning, Henna Application, Head Massage, Thermal Hair Styling, Hair Cuts, Hair-Styling, Self make-up, Advance Hair Cuts, Advance Chemical Job, Perming, Hair Coloring,etc."
        android:textAlignment="center"
        android:gravity="center"
        android:typeface="normal"
        android:textSize="15dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/diplomacourse"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/diplomacareer"
        android:text = "Career Oppotunities : "
        android:layout_below="@+id/diplomacontent"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="#000"
        android:layout_centerHorizontal="false"
        android:textSize="20dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/diplomaopportunity"
        android:text = "@string/hair_opp"
        android:layout_marginLeft="6dp"
        android:textSize="15dp"
        android:layout_below="@+id/diplomacareer" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/diplomaduration"
            android:text = "Duration:"
            android:layout_below="@+id/diplomaopportunity"
            android:textStyle="bold"
            android:typeface="serif"
            android:textColor="#000"
            android:layout_centerHorizontal="false"
            android:textSize="20dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/diplomatime"
            android:text = "288 Hours"
            android:layout_marginLeft="6dp"
            android:textSize="15dp"
            android:layout_alignTop="@+id/diplomaduration"
            android:layout_toEndOf="@+id/diplomaduration" />

    </RelativeLayout>
</ScrollView>
