<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vlccinstitute.ashish.vlcc.Cosmetology.Dbc">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id = "@+id/cosmetologyintro"
        android:text = "Cosmetology"
        android:textAllCaps="true"
        android:textStyle="italic"
        android:typeface="serif"
        android:textAlignment="center"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="@drawable/cosmetology"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/adc"
        android:text = "Diploma in Beauty Culture"
        android:layout_below="@+id/cosmetologyintro"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#000"
        android:typeface = "sans"
        android:layout_centerHorizontal="true"
        android:textSize="24dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/adccourse"
        android:text = "Course Content : "
        android:layout_below="@+id/adc"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000"
        android:typeface="serif"
        android:layout_centerHorizontal="false"
        android:textSize="20dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/adccontent"
        android:text="Superfluous Temporary Hair Removal Techniques, Facial Bleaches, Skin Analysis ,Client Consultation, Basic Facials, Facial Electrotherapy Treatments ,Aromatherapy, Advance Massage Techniques"
        android:textAlignment="center"
        android:gravity="center"
        android:typeface="normal"
        android:textSize="15dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="6dp"
        android:layout_below="@+id/adccourse"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/adccareer"
        android:text = "Career Oppotunities : "
        android:layout_below="@+id/adccontent"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#000"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_centerHorizontal="false"
        android:textSize="20dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/adccopportunity"
        android:text="@string/cosmetology_opp"
        android:textSize="15dp"
        android:layout_marginLeft="6dp"
        android:layout_below="@+id/adccareer" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/duration"
        android:text = "Duration:"
        android:layout_below="@+id/adccopportunity"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="#000"
        android:layout_centerHorizontal="false"
        android:textSize="20dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/time"
        android:text = "288 Hours"
        android:textSize="15dp"
        android:layout_alignTop="@+id/duration"
        android:layout_toEndOf="@+id/duration" />



</RelativeLayout>
</ScrollView>
